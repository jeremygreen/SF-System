<h3>Listing users</h3>

<table>
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th>Role</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= link_to user.username, edit_user_path(user) %></td>
    <td><%= user.email %></td>
    <td><%= user.role %></td>
  </tr>
<% end %>
</table>

<br />

<div id="align_center" class="resetposition">
<%= button_helper("Create New User", new_user_path) %>
</div>
