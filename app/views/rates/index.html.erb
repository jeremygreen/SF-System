<h2>Rates</h2>

<table>
  <tr>
    <th>Customer</th>
    <th>Load</th>
    <th>Movement type</th>
    <th>Rate</th>
  </tr>

<% @rates.each do |rate| %>
  <tr class="<%= cycle("even", "odd") %>">
    <td><%= rate.customer.name %></td>
    <td><%= rate.load.name %></td>
    <td><%= rate.movement_type.movementtype %></td>
    <td><%= link_to rate.rate, edit_rate_path(rate) %></td>
  </tr>
<% end %>
</table>

<br />

<div id="align_center" class="resetposition">
<%= button_helper("Create New Rate", new_rate_path) %>
</div>
