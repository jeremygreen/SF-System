<h3>Vehicles</h3>

<table>
  <tr>
	<th>Reference</th>
    <th>Make</th>
    <th>Model</th>
    <th>Configuration</th>
    <th>Licence Number</th>
    <th>Available</th>
    <th>Capacity</th>
  </tr>

<% @vehicles.each do |vehicle| %>
  <tr class="<%= cycle("even", "odd") %>">
	<td><%= link_to vehicle.referencenumber , edit_vehicle_path(vehicle) %></td>
    <td><%= vehicle.make %></td>
    <td><%= vehicle.model %></td>
    <td><%= vehicle.configuration %></td>
    <td><%= vehicle.licencenumber %></td>
    <td><%= is_available(vehicle.availability) %></td>
    <td><%= vehicle.capacity %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Vehicle', new_vehicle_path %>
